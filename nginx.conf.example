# =============================================================================
# BRAIN CAPITAL - NGINX CONFIGURATION FOR HTTPS
# =============================================================================
# This is an example nginx configuration for production deployment with HTTPS
# 
# Installation (Ubuntu/Debian):
#   sudo apt install nginx certbot python3-certbot-nginx
#
# Get SSL certificate (Let's Encrypt):
#   sudo certbot --nginx -d yourdomain.com -d www.yourdomain.com
#
# Copy this file to /etc/nginx/sites-available/brain-capital
# Then enable it: sudo ln -s /etc/nginx/sites-available/brain-capital /etc/nginx/sites-enabled/
# Test config: sudo nginx -t
# Reload nginx: sudo systemctl reload nginx
# =============================================================================

# Rate limiting zone
limit_req_zone $binary_remote_addr zone=brain_limit:10m rate=10r/s;

# Upstream for Flask app
upstream brain_capital {
    server 127.0.0.1:80;
    keepalive 32;
}

# HTTP - Redirect to HTTPS
server {
    listen 80;
    listen [::]:80;
    server_name mimic.cash www.mimic.cash;
    
    # Redirect all HTTP to HTTPS
    return 301 https://$server_name$request_uri;
}

# HTTPS - Main server block
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name mimic.cash www.mimic.cash;

    # SSL Configuration (will be managed by certbot)
    ssl_certificate /etc/letsencrypt/live/mimic.cash/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/mimic.cash/privkey.pem;
    
    # Modern SSL settings
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers off;
    ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384;
    ssl_session_timeout 1d;
    ssl_session_cache shared:SSL:50m;
    ssl_stapling on;
    ssl_stapling_verify on;

    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;

    # Logging
    access_log /var/log/nginx/brain_capital_access.log;
    error_log /var/log/nginx/brain_capital_error.log;

    # Max upload size
    client_max_body_size 16M;

    # Rate limiting
    limit_req zone=brain_limit burst=20 nodelay;

    # Static files (served directly by nginx for performance)
    location /static/ {
        alias /path/to/your/MIMIC/static/;
        expires 30d;
        add_header Cache-Control "public, no-transform";
    }

    # WebSocket support for Socket.IO
    location /socket.io/ {
        proxy_pass http://brain_capital;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout 86400;
        proxy_send_timeout 86400;
    }

    # Main application
    location / {
        proxy_pass http://brain_capital;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        proxy_connect_timeout 60s;
        proxy_read_timeout 60s;
        proxy_send_timeout 60s;
    }
}

