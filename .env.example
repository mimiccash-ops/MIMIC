# =============================================================================
# BRAIN CAPITAL - LOCAL/DEV ENVIRONMENT TEMPLATE
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ==================== CORE ====================
FLASK_ENV=development
FLASK_SECRET_KEY=dev-secret-key-change-me-32-chars-minimum

# Master encryption key (development only)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
BRAIN_CAPITAL_MASTER_KEY=dev-fernet-key-change-me

# ==================== DATABASE ====================
# Use SQLite for local dev or Postgres for production
DATABASE_URL=sqlite:///brain_capital.db

# ==================== REDIS ====================
REDIS_URL=redis://localhost:6379/0

# ==================== DOMAIN/HTTPS ====================
PRODUCTION_DOMAIN=http://localhost:5000
HTTPS_ENABLED=false

# ==================== RATE LIMITING ====================
API_RATE_LIMIT=120
API_RATE_LIMIT_WINDOW=60

# ==================== TELEGRAM ====================
TELEGRAM_BOT_TOKEN=1234567890:dev-token-placeholder
TELEGRAM_CHAT_ID=123456789

# ==================== WEBHOOK ====================
WEBHOOK_PASSPHRASE=dev-webhook-passphrase-32-chars-min

# ==================== EMAIL (OPTIONAL) ====================
SMTP_USERNAME=dev@example.com
SMTP_PASSWORD=dev-app-password
SMTP_FROM_EMAIL=dev@example.com

# ==================== PAYMENT (OPTIONAL) ====================
PLISIO_API_KEY=plisio-api-key-placeholder
PLISIO_WEBHOOK_SECRET=plisio-webhook-secret-placeholder

# ==================== WEB PUSH (OPTIONAL) ====================
VAPID_PUBLIC_KEY=vapid-public-key-placeholder
VAPID_PRIVATE_KEY=vapid-private-key-placeholder
VAPID_CLAIM_EMAIL=mailto:admin@example.com

# ==================== SUPPORT BOT (OPTIONAL) ====================
OPENAI_API_KEY=sk-example

# ==================== INTERNAL TOKENS ====================
INTERNAL_HEALTH_TOKEN=internal-health-token-placeholder
INTERNAL_METRICS_TOKEN=internal-metrics-token-placeholder

# ==================== OBSERVABILITY (OPTIONAL) ====================
SENTRY_DSN=